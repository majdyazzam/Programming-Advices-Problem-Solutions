

#include <iostream>
using namespace std;

int readNnumber() {
    int num = 0;
   
    do {
cout << "Please Enter Positive Number : " << endl;
        cin >> num;
    } while (num < 0);
        
    return num;
}
void PrintNumberPattern(int number) {
    for (int i = 1; i <= number; i++) {
        for (int j = 1; j <= i; j++) {
            cout << i;
        }
        cout << endl;
    }
}

int main()
{
    PrintNumberPattern(readNnumber());
}
