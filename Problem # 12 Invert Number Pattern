#include <iostream>
using namespace std;

int readNnumber() {
    int num = 0;
   
    do {
cout << "Please Enter Positive Number : " << endl;
        cin >> num;
    } while (num < 0);
        
    return num;
}

void InvertedNumberPattern(int number) {
    for (int i = number; i  > 0; i--) {
        for (int j = i; j  > 0; j--) {
            cout << i;
        }
        cout << endl;
    }
}

int main()
{
    InvertedNumberPattern(readNnumber());
}
